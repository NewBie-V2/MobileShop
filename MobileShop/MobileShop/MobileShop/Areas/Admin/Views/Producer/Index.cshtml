@model PetaPoco.Page<MobileShopConnection.Producer>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-2">
            <a href="@Url.Action("Create", "Producer")" class="btn btn-block btn-primary btn-lg">New producer</a>
        </div>
    </div>
</div>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Products</h3>
                </div>
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Items[0].ProducerName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Items[0].LoGo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Items[0].Deleted)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProducerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LoGo)
                                    </td>
                                    <td>
                                        @(item.Deleted == 0.0 ? "Yes":"No")
                                        @Html.DisplayFor(modelItem => item.Deleted)
                                    </td>
                                    <td>
                                        <div class="blockquote-reverse">
                                            <a class="btn  btn-warning btn-xs"><i class="fa fa-fw fa-edit"></i> Edit</a>
                                            <a class="btn btn-danger btn-xs"><i class="fa fa-fw fa-remove"></i> Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <ul class="pagination">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li><a href="@Url.Action("Index","Producer", new { page=i})">@i</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>