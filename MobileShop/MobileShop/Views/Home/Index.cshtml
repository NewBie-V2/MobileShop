<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Latest Products</h2>
                    <div class="product-carousel">
                        <!---->
                        @foreach (var item in Model)
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="~/Assets/Users/img/@item.Products.ImageURL" alt="">
                                    <div class="product-hover">
                                        <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                        <a href="Products/Details/@item.Products.ProductID" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                    </div>
                                </div>

                                <h2>@Html.ActionLink(@item.Products.ProductName, "Details", "Products", new { id = @item.Products.ProductID }, null)</h2>

                                <div class="product-carousel-price">
                                    <ins>@Convert.ToDecimal(@item.Products.Price).ToString("#,###₫")</ins> <del>$800.00</del>
                                </div>
                            </div>
                        }
                        <!---->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->

<div class="brands-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="brand-wrapper">
                    <h2 class="section-title">Brands</h2>
                    <div class="brand-list">
                        @{
                            var logo = Model.Select(p => p.Producers.LoGo).Distinct();

                            foreach (var item in logo)
                            {

                                <img src="/Assets/Users/img/@item">
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End brands area -->

<div class="product-widget-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="single-product-widget">
                    <h2 class="product-wid-title">Top Sellers</h2>
                    @Html.ActionLink("View All", "AllProduct", "Products", null, new { @class = "wid-view-more" })

                    @{
                        var topSell = Model.Select(p => p.Products).OrderByDescending(p => p.Sold).Take(3);

                        foreach (var item in topSell)
                        {
                            <div class="single-wid-product">
                                <a href="@Url.Action("Details","Products", new { id=item.ProductID})"><img src="~/Assets/Users/img/@item.ImageURL" alt="" class="product-thumb"></a>
                                <h2>@Html.ActionLink(@item.ProductName, "Details", "Products", new { id = @item.ProductID }, null)</h2>
                                <div class="product-wid-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product-wid-price">
                                    <ins>@Convert.ToDecimal(@item.Price).ToString("#,###₫")</ins> <del>$425.00</del>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="col-md-4">
                <div class="single-product-widget">
                    <h2 class="product-wid-title">Recently Viewed</h2>
                    @Html.ActionLink("View All", "AllProduct", "Products", null, new { @class = "wid-view-more" })
                    @{
                        var topView = Model.Select(p => p.Products).OrderByDescending(p => p.Viewed).Take(3);

                        foreach (var item in topView)
                        {
                            <div class="single-wid-product">
                                <a href="@Url.Action("Details","Products", new { id=item.ProductID})"><img src="~/Assets/Users/img/@item.ImageURL" alt="" class="product-thumb"></a>
                                <h2>@Html.ActionLink(@item.ProductName, "Details", "Products", new { id = @item.ProductID }, null)</h2>
                                <div class="product-wid-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product-wid-price">
                                    <ins>@Convert.ToDecimal(@item.Price).ToString("#,###₫")</ins> <del>$425.00</del>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="col-md-4">
                <div class="single-product-widget">
                    <h2 class="product-wid-title">Top New</h2>
                    @Html.ActionLink("View All", "AllProduct", "Products", null, new { @class = "wid-view-more" })
                    @{
                        var topNew = Model.Select(p => p.Products).OrderByDescending(p => p.Date).Take(3);

                        foreach (var item in topNew)
                        {
                            <div class="single-wid-product">
                                <a href="@Url.Action("Details","Products", new { id=item.ProductID})"><img src="~/Assets/Users/img/@item.ImageURL" alt="" class="product-thumb"></a>
                                <h2>@Html.ActionLink(@item.ProductName, "Details", "Products", new { id = @item.ProductID }, null)</h2>
                                <div class="product-wid-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product-wid-price">
                                    <ins>@Convert.ToDecimal(@item.Price).ToString("#,###₫")</ins> <del>$425.00</del>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div> <!-- End product widget area -->
