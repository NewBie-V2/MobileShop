@model PetaPoco.Page<MobileShopConnection.Producer>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var msg = TempData["msg"];
    var icon = TempData["icon"];
    var x = TempData["x"];
}

@section head{
    <title>Admin | Producer</title>
}

@if (msg != null)
{
    <div class="alert alert-@x alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-@icon"></i> Info</h4>
        @msg
    </div>
}

<div class="container-fluid">
    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-2">
            <a href="@Url.Action("Create", "Producer")" class="btn btn-block btn-primary btn-lg">New producer</a>
        </div>
    </div>
</div>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Products</h3>
                </div>
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="col-md-3 text-center">
                                    @Html.DisplayNameFor(model => model.Items[0].ProducerName)
                                </th>
                                <th class="col-md-6 text-center">
                                    @Html.DisplayNameFor(model => model.Items[0].LoGo)
                                </th>
                                <th class="col-md-3 text-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td style="vertical-align:central">
                                        @Html.DisplayFor(modelItem => item.ProducerName)
                                    </td>
                                    <td class="image img-responsive text-center">
                                        <img style="width:30%" src="~/Assets/Users/img/@item.LoGo"/>
                                    </td>
                                    <td>
                                        <div class="btn-group-sm text-center">
                                            <a href="@Url.Action("Edit", "Producer",new { @id=item.ProducerID})" class="btn  btn-info btn-xs"><i class="fa fa-fw fa-edit"></i> Edit</a>
                                            <a href="@Url.Action("Delete", "Producer",new { @id=item.ProducerID})" class="btn btn-danger btn-xs"><i class="fa fa-fw fa-remove"></i> Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <ul class="pagination">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li><a href="@Url.Action("Index","Producer", new { page=i})">@i</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>